<h1 class="display-4 mb-5 mt-5">
  Search results for "<%= params[:search] %>"
</h1>

<div class="row">
  <% @results.each do |book| %>
  <div class="col-6">
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag book.image %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= book.name %></h5>
            <p class="card-text"><%= book.description %></p>
            <p class="card-text"><small class="text-muted">Category: <%= book.book_category.name %></small></p>
            <!-- TODO: update link after adding session carts -->
            <a href="#" class="btn btn-primary">Add to Cart</a>
            <%= link_to  "View Book", book_path(book), class: "btn btn-info" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

<%= paginate @results %>