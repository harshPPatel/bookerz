<h1 class="display-4 mb-5 mt-5">Your Orders ğŸ’°</h1>

<table class="table table-hover mb-5">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Order Date</th>
      <th scope="col">Books Ordered</th>
    </tr>
  </thead>
  <tbody>
    <% if @orders.empty? %>
    <tr>
      <td scope="row" class="table_image text-center" colspan="6">You do not have any orders ğŸ˜•!</td>
    </tr>
    <% else %>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= link_to  order.id.to_s, order_path(order) %>
      </td>
      <td><%= order.order_date.strftime("%FT%T") %></td>
      <td><%= order.books.length %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<%= paginate @orders %>