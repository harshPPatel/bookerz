<h1 class="display-4 mb-5 mt-5">Your Cart ðŸ›’</h1>

<table class="table table-hover mb-5">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Image</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% if @cart.empty? %>
    <tr>
      <td scope="row" class="table_image text-center" colspan="6">You do not have any products in cart ðŸ˜•!</td>
    </tr>
    <% else %>
    <% @cart.each do |book| %>
    <tr>
      <th scope="row" class="table_image"><%= image_tag book.image %></th>
      <td><%= book.name %></td>
      <td><%= book.book_category.name %></td>
      <td>$ <%= book.price %></td>
      <td>
        <%= session[:cart][book.id.to_s] %>
      </td>
      <td>
        <%= link_to  "Remove", remove_from_cart_path(book.id), method: :delete, class: 'btn btn-danger' %>
      </td>
    </tr>
    <% end %>
    <tr>
      <td scope="row" class="table_image text-center" colspan="3"></td>
      <td scope="row" class="table_image"><strong>Total Products:</strong></td>
      <td scope="row" class="table_image">$ <%= @total %></td>
    </tr>
    <tr>
      <td scope="row" class="table_image text-center" colspan="3"></td>
      <td scope="row" class="table_image"><strong>Total:</strong></td>
      <td scope="row" class="table_image">$ <%= @total %></td>
    </tr>
    <% end %>
  </tbody>
</table>